<Window x:Class="NoteTaker.Views.NotesViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTaker.Views"
        mc:Ignorable="d"
        Title="NotesViewer" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding CurrentNotes}" FontSize="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Note Content" Width="320" DisplayMemberBinding="{Binding Content}" />
                    <GridViewColumn Header="Timestamp" Width="300" DisplayMemberBinding="{Binding Timestamp}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
